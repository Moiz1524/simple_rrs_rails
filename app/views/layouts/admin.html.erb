<!DOCTYPE html>
<html>
<head>
  <title>Railway Reservation System : <%= @page_title || 'Admin Area' %></title>
  <%= stylesheet_link_tag('admin', :media => 'all') %>
</head>
<body>
    <div id="header">
        <h1>Railway Reservation System</h1>
    </div>
      <%= render(:partial => 'application/header') %>
        <div id="main">
            <% if !flash[:notice].blank? %>
                <div class="notice">
                    <%= flash[:notice] %>   
                </div>
            <% end %>
        
            <div id="content">
                <%= yield %>
            </div>
        </div>
    </body>
</html>
