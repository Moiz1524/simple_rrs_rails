<%= link_to("<< Back to List", trains_path, :class => 'back-link') %>

<div class="subjects delete">
  <h2>Delete Train</h2>

  <%= form_for(@train, :method => 'delete') do |t| %>

    <p>Are you sure you want to permanently delete this train?</p>

    <p class="reference-name"><%= t.object.name %></p>

    <div class="form-buttons">
      <%= t.submit("Delete Train") %>
    </div>

  <% end %>
</div>